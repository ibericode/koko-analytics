{
  "name": "ibericode/koko-analytics",
  "description": "Privacy-friendly analytics for your WordPress site",
  "keywords": [
    "wordpress",
    "analytics",
    "statistics"
  ],
  "homepage": "https://www.kokoanalytics.com/",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Danny van Kooten",
      "email": "hi@dannyvankooten.com",
      "homepage": "https://dannyvankooten.com"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "php": ">7.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.11",
    "nikic/php-parser": "^5.7",
    "phpstan/phpstan": "^2.1",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "phpstan/extension-installer": "^1.4"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "check-syntax": "bin/check-php-syntax",
    "lint": "vendor/bin/phpcs -n -s",
    "analyse": "vendor/bin/phpstan analyse",
    "fmt": "vendor/bin/phpcbf"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
